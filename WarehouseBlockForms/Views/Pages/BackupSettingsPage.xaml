<Page x:Class="WarehouseBlockForms.Views.Pages.BackupSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WarehouseBlockForms.Views.Pages"
        xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BackupSettingsPage">

    <Grid Margin="10">
        <Button 
            FontSize="16"
            Style="{StaticResource styleDefaultButton}" 
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Content="Сделать бэкап"
            Height="45"
            Width="200"
            Click="btnCreateBackupNow_Click"
            x:Name="btnCreateBackupNow"></Button>
        <Button 
            FontSize="16"
            Style="{StaticResource styleDefaultButton}"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            Content="Восстановить бэкап"
            Height="45"
            Width="200"
            Click="btnRestoreBackup_Click"
            x:Name="btnRestoreBackup" Margin="210, 0, 0, 0"></Button>
    </Grid>
</Page>
